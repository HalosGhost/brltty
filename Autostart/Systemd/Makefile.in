SYSTEMD_UNITS_DIRECTORY = $(INSTALL_ROOT)$(SYSTEMD_SYSTEMUNIT_DIR)
SYSTEMD_SCRIPTS_DIRECTORY = $(INSTALL_ROOT)$(libexecdir)/$(PACKAGE_TARNAME)
SYSTEMD_USERS_DIRECTORY = $(INSTALL_ROOT)$(SYSTEMD_SYSUSERS_DIR)
SYSTEMD_USERS_FILE = $(SYSTEMD_USERS_DIRECTORY)/$(PACKAGE_TARNAME).conf

install: install-units install-scripts install-users

install-units-directory:
	$(INSTALL_DIRECTORY) $(SYSTEMD_UNITS_DIRECTORY)

install-units: install-units-directory
	for extension in service path; do \
	$(INSTALL_DATA) $(SRC_DIR)/*.$$extension $(SYSTEMD_UNITS_DIRECTORY); \
	done

install-scripts-directory:
	$(INSTALL_DIRECTORY) $(SYSTEMD_SCRIPTS_DIRECTORY)

install-scripts: install-scripts-directory
	$(INSTALL_SCRIPT) $(SRC_DIR)/systemd-wrapper $(SYSTEMD_SCRIPTS_DIRECTORY)

install-users-directory:
	$(INSTALL_DIRECTORY) $(SYSTEMD_USERS_DIRECTORY)

install-users: install-users-directory
	$(INSTALL_DATA) $(SRC_DIR)/sysusers $(SYSTEMD_USERS_FILE)

uninstall:
	-rm -f $(SYSTEMD_UNITS_DIRECTORY)/$(PACKAGE_TARNAME).*
	-rm -f $(SYSTEMD_UNITS_DIRECTORY)/$(PACKAGE_TARNAME)@.*
	-rm -f $(SYSTEMD_SCRIPTS_DIRECTORY)/systemd-*
	-rm -f $(SYSTEMD_USERS_FILE)

reload:
	systemctl daemon-reload

